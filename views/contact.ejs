<!DOCTYPE html>
<html lang="en">

<%- include("./partials/head.ejs") %>

<body id="contact">

    <%- include("./partials/sidebar.ejs") %>
    <%- include("./partials/navbar.ejs") %>

    <section class="contact-info">
        <h2>We'd love to hear from you.</h2>
        <div class="contact-info-inner">
            <div class="info">
                <img src="/images/icons/home.svg" alt="address">
                <p>P. Sherman, 42 Wallaby Way, Sydney</p>
            </div>
            <div class="info">
                <img src="/images/icons/email.svg" alt="address">
                <p>shellter.org@email.com</p>
            </div>
            <div class="info">
                <img src="/images/icons/phone-call.svg" alt="address">
                <p>+679-355-5887-116</p>
            </div>
        </div>
    </section>

    <section class="contact-form">

        <h2>Get in touch.</h2>

        <div class="contact-form-inner">
            <form action="">
                <div class="field">
                    <label for="name">Name</label>
                    <input type="text">
                </div>
                <div class="field">
                    <label for="email">Email</label>
                    <input type="email">
                </div>
                <div class="field">
                    <label for="subject">Subject</label>
                    <input type="text">
                </div>
                <div class="field">
                    <label for="message">Message</label>
                    <textarea name="message" id="message" cols="30" rows="10"></textarea>
                </div>
                <div class="button-wrapper">
                    <button>Send <i class="las la-paper-plane"></i></button>
                </div>
            </form>
        </div>
    </section>
</body>

<%- include("./partials/globalScript.ejs") %>

</html>